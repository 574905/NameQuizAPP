<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.hvl.dat153.activities.AddActivity">

    <Button
        android:id="@+id/button_take"
        android:layout_width="159dp"
        android:layout_height="45dp"
        android:onClick="tPicture"
        android:text="@string/takePicture"
        app:layout_constraintBottom_toBottomOf="@+id/image_picture"
        app:layout_constraintEnd_toStartOf="@+id/button_excisting"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toEndOf="@+id/image_picture"
        app:layout_constraintTop_toTopOf="@+id/image_picture"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/button_excisting"
        android:layout_width="159dp"
        android:layout_height="45dp"
        android:layout_marginEnd="88dp"
        android:onClick="gPicture"
        android:text="@string/localPicture"
        app:layout_constraintBottom_toBottomOf="@+id/image_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_picture"
        app:layout_constraintVertical_bias="0.502" />

    <ImageView
        android:id="@+id/image_picture"
        android:layout_width="140dp"
        android:layout_height="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_excisting"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251"
        app:srcCompat="?android:attr/textSelectHandle" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_picture"
        app:layout_constraintStart_toStartOf="@+id/image_picture"
        app:layout_constraintTop_toBottomOf="@+id/image_picture"
        app:layout_constraintVertical_bias="0.154" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="51dp"
        android:onClick="addingThePerson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_excisting"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/button_take"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705"
        app:srcCompat="@android:drawable/checkbox_on_background" />

</androidx.constraintlayout.widget.ConstraintLayout>